<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="net.woodburry.client.new_account_page.NewAccountPageClientBundle"/>

    <g:HTMLPanel styleName="{resources.css.body}">
        <g:HTMLPanel styleName="{resources.css.newAccountPanel}">
            <g:Label>Create New Account</g:Label>
            <div>
                <g:Label>Username:</g:Label><g:TextBox ui:field="username"/>
            </div>
            <div>
                <g:Label>Password:</g:Label><g:TextBox ui:field="password"/>
            </div>
            <g:Button ui:field="submitButton">Submit</g:Button>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>