<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="net.woodburry.client.MainPageClientBundle"/>

    <g:HTMLPanel styleName="{resources.css.mainPage}">
        <g:HTMLPanel styleName="{resources.css.header}">
        </g:HTMLPanel>
        <g:SimplePanel styleName="{resources.css.body}" ui:field="body"/>
        <g:HTMLPanel styleName="{resources.css.footer}">
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>